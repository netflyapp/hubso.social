{
  "extends": "../../packages/config/tsconfig.nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@hubso/ui": ["../../packages/ui/src"],
      "@hubso/shared": ["../../packages/shared/src"]
    },
    "skipLibCheck": true,
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "../../packages/ui/**/*.ts",
    "../../packages/ui/**/*.tsx",
    "../../packages/shared/**/*.ts",
    "../../packages/shared/**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "../../packages/database",
    "../../packages/api",
    "node_modules",
    ".next",
    "dist"
  ]
}
